# .gitignore - Combine Java, Node, IDE, and system files
cat > .gitignore << 'EOF'
# Java
*.class
*.jar
*.war
*.ear
target/
.mvn/
mvnw
mvnw.cmd

# Node
node_modules/
npm-debug.log*
yarn-debug.log*
yarn-error.log*
dist/
build/
.out/
.next/

# IDE
.vscode/
.idea/
*.swp
*.swo
*.iml

# Environment
.env
.env.local
.env.*.local

# System
.DS_Store
Thumbs.db

# Logs
logs/
*.log

# Docker
docker-compose.override.yml

# Temporary files
*.tmp
*.temp
EOF